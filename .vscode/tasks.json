{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/dapr-showcase.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-characterapi",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Api/CharacterApi/CharacterApi.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-locationapi",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Api/LocationApi/LocationApi.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-questapi",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Api/QuestApi/QuestApi.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-characters",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Actors/Characters/Characters.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-locations",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Actors/Locations/Locations.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-quests",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Actors/Quests/Quests.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "appId": "characters-api",
            "appPort": 5000,
            "label": "daprd-debug-characters-api",
            "type": "daprd",
            "dependsOn": "build-characterapi",
            "componentsPath": "${workspaceFolder}/components"
        },
        {
            "appId": "characters-api",
            "label": "daprd-down-characters-api",
            "type": "daprd-down"
        },
        {
            "appId": "location-api",
            "appPort": 5001,
            "label": "daprd-debug-location-api",
            "type": "daprd",
            "dependsOn": "build-locationapi",
            "componentsPath": "${workspaceFolder}/components"
        },
        {
            "appId": "location-api",
            "label": "daprd-down-location-api",
            "type": "daprd-down"
        },
        {
            "appId": "quest-api",
            "appPort": 5002,
            "label": "daprd-debug-quest-api",
            "type": "daprd",
            "dependsOn": "build-questapi",
            "componentsPath": "${workspaceFolder}/components"
        },
        {
            "appId": "quest-api",
            "label": "daprd-down-quest-api",
            "type": "daprd-down"
        },
        {
            "appId": "characters",
            "appPort": 5003,
            "label": "daprd-debug-characters",
            "type": "daprd",
            "dependsOn": "build-characters",
            "componentsPath": "${workspaceFolder}/components"
        },
        {
            "appId": "characters",
            "label": "daprd-down-characters",
            "type": "daprd-down"
        },
        {
            "appId": "locations",
            "appPort": 5004,
            "label": "daprd-debug-locations",
            "type": "daprd",
            "dependsOn": "build-locations",
            "componentsPath": "${workspaceFolder}/components"
        },
        {
            "appId": "locations",
            "label": "daprd-down-locations",
            "type": "daprd-down"
        },
        {
            "appId": "quests",
            "appPort": 5005,
            "label": "daprd-debug-quests",
            "type": "daprd",
            "dependsOn": "build-quests",
            "componentsPath": "${workspaceFolder}/components"
        },
        {
            "appId": "quests",
            "label": "daprd-down-quests",
            "type": "daprd-down"
        }
    ]
}